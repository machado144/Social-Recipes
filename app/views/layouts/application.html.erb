<!DOCTYPE html>
<html>
  <head>
    <title>MySocialRecipe</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="row">
      <div class="col-md-2">
        <h1>Social Recipe</h1>
      </div>
      <div class="col-md-8">
        <% if user_signed_in? %>
        <p>Bem vindo
          <%= current_user.email %></p>
      <% else %>
        <%=link_to 'Entrar', new_user_session_path %>
        <% end %>
        <%=link_to 'Cadastrar Receita', new_recipe_path %>
      </div>
    </div>

    <%= yield %>

  </body>
</html>
