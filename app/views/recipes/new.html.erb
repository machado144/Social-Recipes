<div class="container col-md-6 col-md-offset-3">
  <div class="panel panel-info">
    <div class="panel-heading">
      <div class="panel-title">
        <div class="center-block">
          <h1> Nova receita </h1>
        </div>
      </div>
    </div>
    <div class="panel-body">
      <div class="category_form">
        <%= simple_form_for @recipe do |f| %>
          <%= f.input :recipe, label: 'Nome da receita', error: 'Campo obrigatório' %>
          <%= f.input :kitchen_id, label: 'Cozinha', collection: @kitchens, error: 'Campo obrigatório' %>
          <%= f.input :meal_id, label: 'Refeição', collection: @meals, error: 'Campo obrigatório' %>
          <%= f.input :kind_id, label: 'Preferência', collection: @kinds, error: 'Campo obrigatório'  %>
          <%= f.input :quantity, label: 'Quantidade', collection: 1..12 %>
          <%= f.input :time, label: 'Tempo de preparo', collection: [:'5~15 Minutos', :'15~30 Minutos', :'30~60 Minutos', :'60~120 Minutos'] %>
          <%= f.input :difficulty, label: 'Dificuldade', collection: [:Fácil, :Médio, :Difícil] %>
          <%= f.input :ingredients, label: 'Ingredientes', error: 'Campo obrigatório' %>
          <%= f.input :steps, label: 'Passo a passo', error: 'Campo obrigatório' %>
          <%= f.input :upload, as: :file, label: 'Arquivo' %>
        <%= f.submit 'Adicionar Receita', class: 'btn btn-info' %>
      <% end %>
    </div>
  </div>
</div>
